<div class="d-flex justify-content-between align-items-center mb-4">
  <h2>Your Projects</h2>
  <a href="/projects/new" class="btn btn-outline-light">+ New Project</a>
</div>

<% if (projects.length === 0) { %>
  <p>No projects yet. Start by creating one!</p>
<% } else { %>
  <div class="list-group">
    <% projects.forEach(project => { %>
      <div class="list-group-item bg-dark border-secondary text-light d-flex justify-content-between align-items-center">
        <div>
          <h5 class="mb-1"><%= project.title %></h5>
          <% if (project.description) { %>
            <small><%= project.description %></small>
          <% } %>
        </div>
        <div class="d-flex gap-2">
          <a href="/projects/<%= project.id %>/dashboard" class="btn btn-sm btn-light">Open</a>
          <a href="/projects/edit/<%= project.id %>" class="btn btn-sm btn-outline-warning">Edit</a>
          <form action="/projects/<%= project.id %>?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
          </form>
        </div>
      </div>
    <% }) %>
  </div>
<% } %>
