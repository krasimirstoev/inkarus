<div class="d-flex justify-content-between align-items-center mb-4">
  <h2><%= __('Projects.List.title_heading') %></h2>
  <a href="/projects/new" class="btn btn-outline-light">+ <%= __('Projects.List.new_button') %></a>
</div>

<% if (projects.length === 0) { %>
  <p><%= __('Projects.List.empty') %></p>
<% } else { %>
  <div class="list-group">
    <% projects.forEach(project => { %>
      <div class="list-group-item bg-dark border-secondary text-light d-flex justify-content-between align-items-center">
        <div>
          <h5 class="mb-1"><%= project.title %></h5>
          <% if (project.description) { %>
            <small><%= project.description %></small>
          <% } %>
        </div>
        <div class="d-flex gap-2">
          <a href="/projects/<%= project.id %>/dashboard" class="btn btn-sm btn-light"><%= __('Projects.List.open_button') %></a>
          <a href="/projects/edit/<%= project.id %>" class="btn btn-sm btn-outline-warning"><%= __('Projects.List.edit_button') %></a>
          <form action="/projects/<%= project.id %>?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-sm btn-danger"><%= __('Projects.List.delete_button') %></button>
          </form>
        </div>
      </div>
    <% }) %>
  </div>
<% } %>
