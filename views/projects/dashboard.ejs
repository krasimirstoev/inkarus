<div class="d-flex justify-content-between align-items-center mb-4">
  <h2>📁 <%= project.title %></h2>
  <a href="/projects" class="btn btn-outline-light">← Back to Projects</a>
</div>

<% if (project.description) { %>
  <p class="text-muted"><%= project.description %></p>
<% } %>

<hr>

<div class="row g-3">
  <div class="col-md-4">
    <a href="/drafts/<%= project.id %>" class="btn btn-lg btn-outline-light w-100">
      ✍ Drafts
    </a>
  </div>
  <div class="col-md-4">
    <a href="/notes/<%= project.id %>" class="btn btn-lg btn-outline-light w-100">
      🗒 Notes
    </a>
  </div>
  <div class="col-md-4">
    <a href="/characters/<%= project.id %>" class="btn btn-lg btn-outline-light w-100">
      🎭 Characters
    </a>
  </div>

  <div class="col-md-4">
    <a href="/places/<%= project.id %>" class="btn btn-lg btn-outline-light w-100">
      🗺️ Geography
    </a>
  </div>
  <div class="col-md-4">
    <a href="/events/<%= project.id %>" class="btn btn-lg btn-outline-light w-100">
      🗓️ Events
    </a>
  </div>
</div>
