<% /* views/parts/modalForm.ejs — only the form, no header/footer */ %>

<form
  id="part-form"
  action="/parts/<%= projectId %><%= part ? '/' + part.id : '' %>"
  method="POST"
>
  <div class="mb-3">
    <div class="mb-3 w-100">
    <div class="p-3 rounded text-light"
        style="background-color: #1f2d3a; border: 1px solid #2e3f4d;">
      <strong><i class="bi bi-journal-text me-2 text-info"></i>How book structure works:</strong><br>
      Books can be divided into logical sections such as
      <em>Volumes</em>, <em>Parts</em>, or <em>Acts</em>.<br>
      For example: "Volume I" → "Part 1" → "Act 1" → Chapters.<br>
      Use parts to break your story into larger thematic or narrative chunks.
    </div>
  </div>
    <label for="part-title" class="form-label">
      Title
      <i class="bi bi-info-circle-fill text-info ms-1"
         data-bs-toggle="tooltip" data-bs-placement="top"
         title="A short name for this part. Example: 'Act I', 'Act II', 'Act III' and so on.">
      </i>
    </label>
    <input
      type="text"
      id="part-title"
      name="title"
      class="form-control form-control-sm bg-dark text-white"
      value="<%= part ? part.title : '' %>"
      required
      style="border-color: #6c757d;"
    />
    <div class="form-text text-muted">
      Use a clear and meaningful name to organize your chapters.
    </div>
  </div>

  <div class="mb-3">
    <label for="part-order" class="form-label">
      Order
      <i class="bi bi-info-circle-fill text-info ms-1"
         data-bs-toggle="tooltip" data-bs-placement="top"
         title="Controls the order in which parts appear. Lower numbers come first.">
      </i>
    </label>
    <input
      type="number"
      id="part-order"
      name="order"
      class="form-control form-control-sm bg-dark text-white"
      value="<%= part ? part.order : 0 %>"
      min="0"
      style="border-color: #6c757d;"
    />
    <div class="form-text text-muted">
      This helps structure your book – parts with smaller numbers appear earlier.
    </div>
  </div>

  <button type="submit"
          class="btn btn-primary btn-sm">
    <%= part ? 'Update Part' : 'Create Part' %>
  </button>
</form>
