<% /* views/parts/modalForm.ejs â€” only the form, no header/footer */ %>

<form
  id="part-form"
  action="/parts/<%= projectId %><%= part ? '/' + part.id : '' %>"
  method="POST"
>
  <div class="mb-3">
    <div class="mb-3 w-100">
    <div class="p-3 rounded text-light"
        style="background-color: #1f2d3a; border: 1px solid #2e3f4d;">
      <strong><i class="bi bi-journal-text me-2 text-info"></i><%= __('Parts.Help.title') %></strong><br>
      <%- __('Parts.Help.description1') %><br><br>
      <%- __('Parts.Help.description2') %><br><br>
      <%- __('Parts.Help.description3') %><br><br>
      <%- __('Parts.Help.description4') %><br>
    </div>
  </div>
    <label for="part-title" class="form-label">
      <%= __('Parts.Form.titleLabel') %>
      <i class="bi bi-info-circle-fill text-info ms-1"
         data-bs-toggle="tooltip" data-bs-placement="top"
         title="<%= __('Parts.Tooltip.title') %>">
      </i>
    </label>
    <input
      type="text"
      id="part-title"
      name="title"
      class="form-control form-control-sm bg-dark text-white"
      value="<%= part ? part.title : '' %>"
      required
      style="border-color: #6c757d;"
    />
    <div class="form-text text-muted">
      <%= __('Parts.Help.titleHint') %>
    </div>
  </div>

  <div class="mb-3">
    <label for="part-order" class="form-label">
      <%= __('Parts.Form.orderLabel') %>
      <i class="bi bi-info-circle-fill text-info ms-1"
         data-bs-toggle="tooltip" data-bs-placement="top"
         title="<%= __('Parts.Tooltip.order') %>">
      </i>
    </label>
    <input
      type="number"
      id="part-order"
      name="order"
      class="form-control form-control-sm bg-dark text-white"
      value="<%= part ? part.order : 0 %>"
      min="0"
      style="border-color: #6c757d;"
    />
    <div class="form-text text-muted">
      <%= __('Parts.Help.orderHint') %>
    </div>
  </div>

  <button type="submit"
          class="btn btn-primary btn-sm">
    <%= part ? __('Parts.Form.update') : __('Parts.Form.create') %>
  </button>
</form>
