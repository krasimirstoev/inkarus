
<h2 class="mb-4">Search Results for: "<%= query %>"</h2>

<% if (results.drafts.length === 0 && results.notes.length === 0 && results.characters.length === 0) { %>
  <p>No results found.</p>
<% } else { %>

  <% if (results.drafts.length) { %>
    <h4>Drafts</h4>
    <ul class="list-group mb-4">
      <% results.drafts.forEach(d => { %>
        <li class="list-group-item bg-dark text-light border-secondary">
          <strong><%= d.title %></strong> (Project: <%= d.project_title %>)
          <div class="small text-muted">ID: <%= d.id %></div>
        </li>
      <% }) %>
    </ul>
  <% } %>

  <% if (results.notes.length) { %>
    <h4>Notes</h4>
    <ul class="list-group mb-4">
      <% results.notes.forEach(n => { %>
        <li class="list-group-item bg-dark text-light border-secondary">
          <strong><%= n.title %></strong> (Project: <%= n.project_title %>)
        </li>
      <% }) %>
    </ul>
  <% } %>

  <% if (results.characters.length) { %>
    <h4>Characters</h4>
    <ul class="list-group mb-4">
      <% results.characters.forEach(c => { %>
        <li class="list-group-item bg-dark text-light border-secondary">
          <strong><%= c.name %></strong> â€” <%= c.health_status %> (Project: <%= c.project_title %>)
        </li>
      <% }) %>
    </ul>
  <% } %>

<% } %>
