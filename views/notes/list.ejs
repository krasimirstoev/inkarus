<div class="container py-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2><%= __('Notes.List.title') %></h2>
    <a href="/notes/<%= projectId %>/new" class="btn btn-outline-light">+ <%= __('Notes.List.new_button') %></a>
  </div>

  <% if (notes.length === 0) { %>
    <p class="text-muted"><%= __('Notes.List.empty') %></p>
  <% } else { %>
    <div class="list-group">
      <% notes.forEach(note => { %>
        <div class="list-group-item bg-dark text-light d-flex justify-content-between align-items-center">
          <div class="flex-grow-1">
            <strong><%= note.title %></strong>
          </div>
          <div class="btn-group btn-group-sm ms-3">
            <a href="/notes/<%= projectId %>/edit/<%= note.id %>" class="btn btn-outline-warning">📝</a>
            <form action="/notes/delete/<%= note.id %>?_method=DELETE" method="POST" onsubmit="return confirm(__('Notes.List.confirm_delete'))" style="display:inline;">
              <button type="submit" class="btn btn-outline-danger">🗑</button>
            </form>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>

<!-- Scripts -->
<script type="module" src="/js/pages/notes-list.js"></script>
