<form id="event-form"
      action="/events/<%= projectId %><% if(id) { %>/edit/<%= id %><% } else { %>/new<% } %>"
      method="post">
  <div class="mb-3">
    <label for="event-title" class="form-label"><%= __('Events.Form.title') %></label>
    <input type="text" class="form-control" id="event-title" name="title"
           value="<%= event.title %>" required>
  </div>

  <div class="mb-3">
    <label for="event-date" class="form-label"><%= __('Events.Form.date') %></label>
    <input type="text" class="form-control" id="event-date" name="event_date"
           value="<%= event.event_date %>">
    <div class="form-text"><%= __('Events.Form.dateHelp') %></div>
  </div>

  <div class="form-check mb-3">
    <input class="form-check-input" type="checkbox" id="event-abstract"
           name="is_abstract" <%= event.is_abstract ? 'checked' : '' %>>
    <label class="form-check-label" for="event-abstract">
      <%= __('Events.Form.abstract') %>
    </label>
    <div class="form-text text-muted small mt-1">
      <%= __('Events.Form.abstractHelp') %>
    </div>
  </div>

  <div class="mb-3">
    <label for="display-order" class="form-label"><%= __('Events.Form.displayOrder') %></label>
    <input type="number" class="form-control" id="display-order"
           name="display_order" value="<%= event.display_order %>">
    <div class="form-text"><%= __('Events.Form.displayOrderHelp') %></div>
  </div>

  <div class="mb-3">
    <label for="event-description" class="form-label"><%= __('Events.Form.description') %></label>
    <textarea class="form-control" id="event-description" name="description"
              rows="3"><%= event.description %></textarea>
  </div>

  <button type="submit" class="btn btn-primary">
    <%= event.id ? __('Events.Form.saveChanges') : __('Events.Form.create') %>
  </button>
</form>
