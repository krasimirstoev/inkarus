<div class="container py-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Places</h2>
    <a href="/places/<%= projectId %>/new" class="btn btn-outline-light">+ New Place</a>
  </div>

  <% if (places.length === 0) { %>
    <p class="text-muted">No places yet.</p>
  <% } else { %>
    <div class="list-group">
      <% places.forEach(place => { %>
        <div class="list-group-item bg-dark text-light d-flex justify-content-between align-items-center">
          <div class="flex-grow-1">
            <strong><%= place.name %></strong>
            <small class="text-secondary d-block fst-italic"><%= place.type %></small>
            <% if (place.description) { %>
              <p class="mb-1 small text-secondary"><%= place.description %></p>
            <% } %>
          </div>
          <div class="btn-group btn-group-sm ms-3">
            <a href="/places/<%= projectId %>/edit/<%= place.id %>" 
               class="btn btn-outline-warning" title="Edit place">âœŽ</a>
            <form action="/places/<%= projectId %>/delete/<%= place.id %>?_method=DELETE" 
                  method="POST" 
                  onsubmit="return confirm('Are you sure you want to delete this place?')" 
                  style="margin:0;">
              <button type="submit" class="btn btn-outline-danger" title="Delete place">ðŸ—‘</button>
            </form>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>
