<!-- views/places/form.ejs -->
<div class="container py-5">
  <h2><%= title %></h2>
  <form method="POST"
        action="<%= place.id 
           ? `/places/${projectId}/update/${place.id}` 
           : `/places/${projectId}` %>">
    <% if (place.id) { %>
      <input type="hidden" name="_method" value="POST">
    <% } %>

    <div class="mb-3">
      <label class="form-label"><%= __('Places.Form.nameLabel') %></label>
      <input type="text" name="name" class="form-control" required
             value="<%= place.name || '' %>">
    </div>

    <div class="mb-3">
      <label class="form-label"><%= __('Places.Form.typeLabel') %></label>
      <select name="type" id="place-type" class="form-select">
        <% types.forEach(t => { %>
          <option value="<%= t %>" <%= place.type === t ? 'selected' : '' %>>
            <%= __('Places.Type.' + t) %>
          </option>
        <% }) %>
      </select>
      <input type="text" name="customType" id="custom-type"
             class="form-control mt-2 d-none"
             placeholder="<%= __('Places.Form.customPlaceholder') %>"
             value="<%= place.type && !types.includes(place.type) ? place.type : '' %>">
    </div>

    <div class="mb-3">
      <label class="form-label"><%= __('Places.Form.descriptionLabel') %></label>
      <textarea name="description" class="form-control" rows="4"><%= place.description||'' %></textarea>
    </div>

    <button type="submit" class="btn btn-success">ğŸ’¾ <%= __('Places.Button.savePlace') %></button>
    <a href="/places/<%= projectId %>" class="btn btn-secondary ms-2">â† <%= __('Places.Button.backToList') %></a>
  </form>
</div>

<script>
  // same toggle logic
  const typeEl   = document.getElementById('place-type');
  const customEl = document.getElementById('custom-type');
  const toggleCustom = () => customEl.classList.toggle('d-none', typeEl.value!=='custom');
  typeEl.addEventListener('change', toggleCustom);
  toggleCustom();
</script>
