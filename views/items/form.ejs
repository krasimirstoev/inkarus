<!-- views/items/form.ejs -->
<div class="container py-5">
  <h2><%= title %></h2>
  <form method="POST"
        action="<%= item.id 
           ? `/items/${projectId}/update/${item.id}` 
           : `/items/${projectId}` %>">
    <% if (item.id) { %>
      <input type="hidden" name="_method" value="POST">
    <% } %>

    <div class="mb-3">
      <label class="form-label"><%= __('Items.FormPage.name') %></label>
      <input type="text" name="name" class="form-control" required
             value="<%= item.name || '' %>">
    </div>

    <div class="mb-3">
      <label class="form-label"><%= __('Items.FormPage.status') %></label>
      <select name="status" id="item-status" class="form-select">
        <% statuses.forEach(s => { %>
          <option value="<%= s %>" <%= item.status === s ? 'selected' : '' %>>
           <%= s === 'custom' ? __('Items.Status.custom_placeholder') : __('Items.Status.' + s) %>
          </option>
        <% }) %>
      </select>
      <input type="text" name="customStatus" id="custom-status"
             class="form-control mt-2 d-none"
             placeholder="<%= __('Items.FormPage.customStatusPlaceholder') %>"
             value="<%= item.status === 'custom' ? item.custom_status : '' %>">
    </div>

    <div class="mb-3">
      <label class="form-label"><%= __('Items.FormPage.description') %></label>
      <textarea name="description" class="form-control" rows="4"><%= item.description || '' %></textarea>
    </div>

    <button type="submit" class="btn btn-success"><%= __('Items.FormPage.saveBtn') %></button>
    <a href="/items/<%= projectId %>" class="btn btn-secondary ms-2"><%= __('Items.FormPage.backBtn') %></a>
  </form>
</div>

<script>
  // Show/hide custom status input
  const statusEl = document.getElementById('item-status');
  const customEl = document.getElementById('custom-status');
  const toggleCustom = () => customEl.classList.toggle('d-none', statusEl.value !== 'custom');
  statusEl.addEventListener('change', toggleCustom);
  toggleCustom();
</script>
