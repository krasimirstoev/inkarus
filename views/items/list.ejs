<div class="container py-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2><%= __('Items.List.title') %></h2>
    <a href="/items/<%= projectId %>/new" class="btn btn-outline-light">+ <%= __('Items.List.addBtn') %></a>
  </div>

  <% if (items.length === 0) { %>
    <p class="text-muted"><%= __('Items.List.noResults') %></p>
  <% } else { %>
    <div class="list-group">
      <% items.forEach(item => { %>
        <div class="list-group-item bg-dark text-light">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <strong><%= item.name %></strong>
              <small class="text-secondary d-block fst-italic"><%= item.display_status %></small>
              <% if (item.description) { %>
                <p class="mb-1 small text-secondary"><%= item.description %></p>
              <% } %>
            </div>
            <div class="d-flex gap-2">
              <a href="/items/<%= projectId %>/edit/<%= item.id %>" 
                 class="btn btn-sm btn-outline-warning" title="<%= __('Items.List.editTooltip') %>">âœŽ</a>
              <form action="/items/<%= projectId %>/delete/<%= item.id %>?_method=DELETE" 
                    method="POST" onsubmit="return confirm('<%= __('Items.List.confirmDelete') %>')" style="margin:0;">
                <button type="submit" class="btn btn-sm btn-outline-danger" title="<%= __('Items.List.deleteTooltip') %>">ðŸ—‘</button>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>
