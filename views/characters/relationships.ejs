<!-- views/characters/relationships.ejs -->
<div class="container py-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2><%= __('Characters.Relationships.title') %></h2>
    <div class="btn-group">
      <a href="/characters/<%= projectId %>" class="btn btn-sm btn-outline-secondary">‚Üê <%= __('Characters.Relationships.back') %></a>
      <a href="/characters/<%= projectId %>/relationships/graph-view" class="btn btn-sm btn-outline-info ms-2">üìä <%= __('Characters.Relationships.graph_view') %></a>
    </div>
  </div>

  <% if (error === 'same') { %>
    <div class="alert alert-warning">
      ‚ö† <%= __('Characters.Relationships.error_same') %>
    </div>
  <% } %>

  <form action="/characters/<%= projectId %>/relationships" method="POST" class="mb-4 row g-3">
    <div class="col-md-4">
      <label for="character_id" class="form-label"><%= __('Characters.Relationships.character') %></label>
      <select name="character_id" id="character_id" class="form-select" required>
        <% characters.forEach(char => { %>
          <option value="<%= char.id %>"><%= char.name %></option>
        <% }) %>
      </select>
    </div>

    <div class="col-md-4">
      <label for="related_character_id" class="form-label"><%= __('Characters.Relationships.related_character') %></label>
      <select name="related_character_id" id="related_character_id" class="form-select" required>
        <% characters.forEach(char => { %>
          <option value="<%= char.id %>"><%= char.name %></option>
        <% }) %>
      </select>
    </div>

    <div class="col-md-3">
      <label for="relation" class="form-label"><%= __('Characters.Relationships.relation') %></label>
      <input type="text" name="relation" id="relation" class="form-control" placeholder="<%= __('Characters.Relationships.placeholder') %>" required>
    </div>

    <div class="col-md-1 d-flex align-items-end">
      <button type="submit" class="btn btn-success w-100">‚ûï</button>
    </div>
  </form>

  <% if (relationships.length === 0) { %>
    <p class="text-muted"><%= __('Characters.Relationships.empty') %></p>
  <% } else { %>
    <div class="list-group">
      <% 
        let currentGroup = null;
        relationships.forEach(r => {
          if (currentGroup !== r.character_name) {
            currentGroup = r.character_name;
      %>
        <div class="list-group-item bg-secondary text-white fw-bold">
          <%= currentGroup %>
        </div>
      <% } %>
        <div class="list-group-item d-flex justify-content-between align-items-center bg-dark text-light ps-4">
          <div>
            <em><%= r.relation %></em> of <strong><%= r.related_name %></strong>
          </div>
          <div class="btn-group btn-group-sm">
            <button
              type="button"
              class="btn btn-outline-warning btn-edit-relation"
              data-id="<%= r.id %>"
              data-project="<%= projectId %>"
              data-relation="<%= r.relation %>"
              title="<%= __('Characters.Relationships.edit_tooltip') %>"
            >‚úè</button>

            <form action="/characters/<%= projectId %>/relationships/<%= r.id %>?_method=DELETE" method="POST" onsubmit="return confirm('Delete this relationship?')" class="ms-2">
              <button type="submit" class="btn btn-outline-danger">üóë</button>
            </form>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>

<!-- ‚úè Edit Relation Modal -->
<div class="modal fade" id="editRelationModal" tabindex="-1" aria-labelledby="editRelationModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content bg-dark text-light">
      <div class="modal-header">
        <h5 class="modal-title" id="editRelationModalLabel"><%= __('Characters.Relationships.modal_title') %></h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form method="POST" id="editRelationForm">
        <input type="hidden" name="_method" value="PUT">
        <div class="modal-body">
          <div class="mb-3">
            <label for="editRelationInput" class="form-label"><%= __('Characters.Relationships.relation') %></label>
            <input type="text" class="form-control" id="editRelationInput" name="relation" required>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">üíæ <%= __('Characters.Relationships.save') %></button>
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><%= __('Characters.Relationships.cancel') %></button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/js/pages/character-relationships.js"></script>

