<!-- views/characters/partial-list.ejs -->
<% if (characters.length === 0) { %>
    <p class="text-muted small"><%= __('Characters.PartialList.empty') %></p>
  <% } else { %>
    <div class="list-group">
      <% characters.forEach(c => { %>
        <button type="button"
                class="list-group-item list-group-item-action view-character-btn py-2"
                data-id="<%= c.id %>" data-project="<%= projectId %>">
          <strong><%= c.name %></strong>
          <% if (c.pseudonym) { %>
            <small class="text-muted"> (<%= __('Characters.PartialList.aka') %>: <%= c.pseudonym %>)</small>
          <% } %>
        </button>
      <% }) %>
    </div>
  <% } %>
  