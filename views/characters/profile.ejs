
<!-- views/characters/profile.ejs -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <h2><%= __('Characters.Profile.title') %></h2>
  <a href="/characters/<%= projectId %>/new" class="btn btn-outline-light">+ <%= __('Characters.Profile.new') %></a>
</div>

<% if (characters.length === 0) { %>
  <p><%= __('Characters.Profile.empty') %></p>
<% } else { %>
  <div class="row">
    <% characters.forEach(char => { %>
      <div class="col-md-6 mb-4">
        <div class="card bg-dark text-light border-secondary">
          <div class="card-body">
            <h5 class="card-title"><%= char.name %></h5>
            <p class="card-text"><%= char.description || __('Characters.Profile.no_description') %></p>
            <p class="text-muted"><%= __('Characters.Profile.health') %>: <%= char.health_status %></p>
            <a href="/characters/<%= projectId %>/edit/<%= char.id %>" class="btn btn-sm btn-outline-light"><%= __('Characters.Profile.edit') %></a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
<% } %>
