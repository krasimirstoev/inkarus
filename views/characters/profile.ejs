
<div class="d-flex justify-content-between align-items-center mb-4">
  <h2>Characters</h2>
  <a href="/characters/<%= projectId %>/new" class="btn btn-outline-light">+ New Character</a>
</div>

<% if (characters.length === 0) { %>
  <p>No characters yet.</p>
<% } else { %>
  <div class="row">
    <% characters.forEach(char => { %>
      <div class="col-md-6 mb-4">
        <div class="card bg-dark text-light border-secondary">
          <div class="card-body">
            <h5 class="card-title"><%= char.name %></h5>
            <p class="card-text"><%= char.description || 'No description provided.' %></p>
            <p class="text-muted">Health: <%= char.health_status %></p>
            <a href="/characters/<%= projectId %>/edit/<%= char.id %>" class="btn btn-sm btn-outline-light">Edit</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
<% } %>
